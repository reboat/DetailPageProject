<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/bc_202124"
              android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/module_detail_fg_image_mask"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_type_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/module_detail_ic_video_player_start"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bc_202124">

        <com.aliya.view.fitsys.FitWindowsRecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:scrollbars="vertical"
            app:fitType="bottom"/>

        <com.aliya.view.fitsys.FitWindowsFrameLayout
            android:id="@+id/floor_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/module_detail_floor_bar_height"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:fitsSystemWindows="true"
            app:fitType="bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="?attr/bc_191919"
                >

                <FrameLayout
                    android:id="@+id/fl_comment"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/module_detail_comment_edit"
                    >

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableLeft="@mipmap/me_qq_btn"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="20dp"
                        android:text="@string/module_detail_comment_hint"
                        android:textColor="?attr/tc_484848"
                        android:textColorHint="?attr/tc_999999"
                        android:textSize="@dimen/ts_14sp"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/menu_comment"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/fl_comment"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/ic_detail_menu_comments"
                    app:iv_maskColor="@color/module_detail_comment_night"/>

                <TextView
                    android:id="@+id/tv_comments_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/menu_comment"
                    android:layout_marginLeft="-12dp"
                    android:layout_marginTop="-3dp"
                    android:layout_toRightOf="@id/menu_comment"
                    android:background="@drawable/module_detail_comment_num"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:textColor="?attr/tc_aaaaaa"
                    android:textSize="@dimen/ts_10sp"/>

                <ImageView
                    android:id="@+id/menu_prised"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/menu_comment"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/sl_news_detail_collected"
                    app:iv_maskColor="@color/module_detail_comment_night"/>

                <ImageView
                    android:id="@+id/menu_share"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/menu_prised"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/ic_detail_menu_share"
                    app:iv_maskColor="@color/module_detail_comment_night"/>
            </RelativeLayout>
        </com.aliya.view.fitsys.FitWindowsFrameLayout>

    </FrameLayout>

</LinearLayout>