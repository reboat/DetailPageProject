<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/bc_ffffff"
    >

    <com.aliya.view.ratio.RatioFrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:ratio_w2h="16:9">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:id="@+id/iv_type_video"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="left|bottom"
            android:layout_margin="11.5dp"
            android:background="?attr/vr_bg_start"
            android:foreground="?attr/actionBarItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/vr_play"
                app:iv_maskColor="@color/module_detail_tc_white_night" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:letterSpacing="0.03"
                android:textColor="?attr/vr_tc_duration"
                android:textSize="11dp"
                android:visibility="gone"
                tools:text="00:00" />

        </LinearLayout>

    </com.aliya.view.ratio.RatioFrameLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/video_container"
        >

        <com.aliya.view.fitsys.FitWindowsFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:fitType="bottom">

            <com.aliya.view.fitsys.FitWindowsRecyclerView
                android:id="@+id/rv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                />

        </com.aliya.view.fitsys.FitWindowsFrameLayout>

        <include
            android:id="@+id/ly_bottom_comment"
            layout="@layout/module_detail_bottom_comment" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>