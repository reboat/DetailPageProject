<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ly_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/bc_202124"
              android:orientation="vertical"
    >

    <!--错误页面-->
    <LinearLayout
        android:id="@+id/view_exise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_exise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:src="?attr/module_core_ic_global_failed"
            />

        <TextView
            android:id="@+id/tv_exise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_exise"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="加载失败"
            android:textColor="?attr/tc_484848"
            android:textSize="@dimen/ts_14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_exise"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="点击屏幕重试"
            android:textColor="?attr/tc_484848"
            android:textSize="@dimen/ts_11sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/module_detail_fg_image_mask"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_type_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/module_detail_ic_video_player_start"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bc_202124">

        <com.aliya.view.fitsys.FitWindowsRecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:scrollbars="vertical"
            app:fitType="bottom"/>

        <com.aliya.view.fitsys.FitWindowsFrameLayout
            android:id="@+id/floor_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fitsSystemWindows="true"
            app:fitType="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="?attr/dc_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/bc_191919"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                >

                <FrameLayout
                    android:id="@+id/fl_comment"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/module_detail_comment_edit"
                    >

                    <EditText
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableLeft="@mipmap/module_detail_commentedit_left"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="20dp"
                        android:text="@string/module_detail_comment_hint"
                        android:textColor="?attr/tc_484848"
                        android:textColorHint="?attr/tc_999999"
                        android:textSize="@dimen/ts_14sp"/>

                </FrameLayout>

                <ImageView
                    android:id="@+id/menu_comment"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/fl_comment"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/module_detail_ic_comment"
                    app:iv_maskColor="@color/module_detail_comment_night"/>

                <TextView
                    android:id="@+id/tv_comments_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/menu_comment"
                    android:layout_marginLeft="-12dp"
                    android:layout_marginTop="-3dp"
                    android:layout_toRightOf="@id/menu_comment"
                    android:background="@drawable/module_detail_comment_num"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:textSize="@dimen/ts_10sp"/>

                <ImageView
                    android:id="@+id/menu_prised"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/menu_comment"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/module_detail_news_prise"
                    app:iv_maskColor="@color/module_detail_comment_night"/>

                <ImageView
                    android:id="@+id/menu_setting"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/menu_prised"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/module_detail_ic_more"
                    app:iv_maskColor="@color/module_detail_comment_night"/>
            </RelativeLayout>
        </com.aliya.view.fitsys.FitWindowsFrameLayout>

    </FrameLayout>

</LinearLayout>