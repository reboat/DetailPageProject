<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_f5f5f5_343434"
                android:paddingBottom="12dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="12dp"
    >

    <ImageView
        android:id="@+id/iv_column_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        app:ratio_w2h="1:1"
        tools:src="@mipmap/module_detail_activity_host" />

    <TextView
        android:id="@+id/tv_column_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/iv_column_logo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:maxWidth="150dp"
        android:textColor="@color/_000000_7a7b7d"
        android:textSize="@dimen/ts_16sp"
        tools:text="麻辣快评" />

    <TextView
        android:id="@+id/tv_column_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/module_detail_activity_subscribe_red"
        android:foreground="?android:attr/actionBarItemBackground"
        android:gravity="center"
        android:paddingBottom="7.5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="7.5dp"
        android:textColor="@color/_f44b50_8e3636"
        android:textSize="@dimen/ts_14sp"
        android:visibility="gone"
        tools:text="订阅" />


</RelativeLayout>