<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/floor_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="@color/_ffffff_202124"
    android:elevation="10dp"
    android:orientation="horizontal">

    <!--评论框-->
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/fl_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="32dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/module_detail_comment_hint"
            android:textColor="@color/_999999_5c5c5c"
            android:textColorHint="@color/_bfbfbf"
            android:textSize="@dimen/ts_13sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_comment"
            android:layout_marginTop="2dp"
            android:background="@color/_bfbfbf" />

    </RelativeLayout>


    <!--评论列表-->
    <RelativeLayout
        android:id="@+id/ly_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/menu_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/module_biz_ic_comment"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_comments_num"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/menu_comment"
            android:fontFamily="@font/din_medium"
            android:maxLines="1"
            android:textColor="@color/_d12324"
            android:textSize="11sp"
            android:visibility="invisible"
            tools:text="10.8万+" />
    </RelativeLayout>


    <!--点赞-->
    <ImageView
        android:id="@+id/menu_prised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:src="@drawable/module_biz_news_prise"
        android:visibility="visible" />

    <!--设置-->
    <ImageView
        android:id="@+id/iv_top_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:src="@mipmap/module_biz_topbar_share" />
</LinearLayout>
