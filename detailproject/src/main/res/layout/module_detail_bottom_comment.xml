<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/floor_bar"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_gravity="bottom"
                                                android:fitsSystemWindows="true"
                                                app:fitType="bottom">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_ffffff_202124"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/fl_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/ly_comment_num"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/module_detail_comment_hint"
                android:textColor="@color/_999999_5c5c5c"
                android:textColorHint="@color/_bfbfbf"
                android:textSize="@dimen/ts_13sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_comment"
                android:layout_marginTop="2dp"
                android:background="@color/_bfbfbf" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ly_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/menu_prised"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/menu_comment"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_toLeftOf="@+id/menu_prised"
                android:src="@mipmap/module_detail_ic_comment"
                android:visibility="visible"
                app:iv_maskColor="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/menu_comment"
                android:maxLines="1"
                android:textColor="@color/_d12324"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="999+" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/menu_prised"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="31dp"
            android:layout_toLeftOf="@+id/menu_setting"
            android:src="@drawable/module_detail_news_prise"
            android:visibility="visible"
            app:iv_maskColor="@android:color/transparent" />

        <ImageView
            android:id="@+id/menu_setting"
            android:layout_width="19dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/module_detail_ic_more"
            app:iv_maskColor="@android:color/transparent" />
    </RelativeLayout>
</com.aliya.view.fitsys.FitWindowsRelativeLayout>
