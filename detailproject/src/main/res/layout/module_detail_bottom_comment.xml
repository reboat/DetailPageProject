<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/floor_bar"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_gravity="bottom"
                                                android:fitsSystemWindows="true"
                                                app:fitType="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/_ffffff_202124"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_comment"
            android:layout_width="188dp"
            android:layout_height="35dp"
            android:layout_marginRight="32dp"
            >

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:hint="@string/module_detail_comment_hint"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/_bfbfbf"
                android:textColor="@color/_999999_5c5c5c"
                android:textSize="@dimen/ts_11sp"
                tools:text="加深对"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:background="@color/_bfbfbf" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/ly_comment_num"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_comment"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@mipmap/module_detail_ic_comment"
                app:iv_maskColor="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_comments_num"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/_d12324"
                android:textSize="@dimen/ts_10sp"
                tools:text="99999+" />

        </LinearLayout>


        <ImageView
            android:id="@+id/menu_prised"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:src="@drawable/module_detail_news_prise"
            app:iv_maskColor="@android:color/transparent" />

        <ImageView
            android:id="@+id/menu_setting"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_marginRight="5dp"
            android:src="@mipmap/module_detail_ic_more"
            app:iv_maskColor="@android:color/transparent" />
    </LinearLayout>
</com.aliya.view.fitsys.FitWindowsRelativeLayout>
