<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/floor_bar"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_gravity="bottom"
                                                android:fitsSystemWindows="true"
                                                app:fitType="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/_ffffff_202124"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_comment"
            android:layout_width="188dp"
            android:layout_height="35dp"
            >

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:hint="@string/module_detail_comment_hint"
                android:paddingLeft="15dp"
                android:textColor="@color/_999999_5c5c5c"
                android:textColorHint="@color/_bfbfbf"
                android:textSize="@dimen/ts_13sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:background="@color/_bfbfbf" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/ly_comment_num"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/menu_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/module_detail_ic_comment"
                app:iv_maskColor="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_comments_num"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textColor="@color/_d12324"
                android:textSize="8sp"
                tools:text="99999+" />

        </LinearLayout>


        <ImageView
            android:id="@+id/menu_prised"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:src="@drawable/module_detail_news_prise"
            app:iv_maskColor="@android:color/transparent" />

        <ImageView
            android:id="@+id/menu_setting"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:src="@mipmap/module_detail_ic_more"
            app:iv_maskColor="@android:color/transparent" />
    </LinearLayout>
</com.aliya.view.fitsys.FitWindowsRelativeLayout>
