<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/bc_f8f8f8"
    >

    <RelativeLayout
        android:id="@+id/v_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="?attr/module_detail_arrow" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text="提交"
            android:textColor="?attr/tc_000000"
            android:textSize="@dimen/ts_16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_des_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_top_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="点击播放"
        android:textColor="?attr/tc_999999"
        android:textSize="@dimen/ts_16sp"
        />

    <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/tv_des_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="?attr/module_detail_audio_play" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pb_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:textColor="?attr/module_detail_808080"
            android:textSize="@dimen/ts_14sp"
            tools:text="00:38/" />

        <TextView
            android:id="@+id/tv_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/tc_000000"
            android:textSize="@dimen/ts_14sp"
            android:visibility="gone"
            tools:text="03:00" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/pb_bar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/tc_f44b50" />


</RelativeLayout>
