<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f8f8f8_202124">

    <RelativeLayout
        android:id="@+id/v_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/module_core_arrow" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text="提交"
            android:textColor="@color/_000000_7a7b7d"
            android:textSize="@dimen/ts_16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_des_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_top_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="点击录音"
        android:textColor="@color/_999999_7a7b7d"
        android:textSize="@dimen/ts_16sp" />

    <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/tv_des_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@mipmap/module_core_audio_unrecord" />

    <LinearLayout
        android:id="@+id/v_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_play_pause"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:textColor="@color/_808080_7a7b7d"
            android:textSize="@dimen/ts_14sp"
            tools:text="00:38/" />

        <TextView
            android:id="@+id/tv_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_000000_7a7b7d"
            android:textSize="@dimen/ts_14sp"
            android:visibility="gone"
            tools:text="03:00" />

    </LinearLayout>


    <SeekBar
        android:id="@+id/pb_bar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/v_time_container"
        android:layout_marginTop="11dp"
        android:background="@color/_f44b50_8e3636"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:progressDrawable="@drawable/module_core_audio_progress"
        android:thumb="@null" />


</RelativeLayout>
