<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/hsv_module_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/ll_module_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/_f8f8f8_202124"
            android:orientation="horizontal"
            android:paddingBottom="27dp"
            android:paddingTop="27dp">

            <LinearLayout
                android:id="@+id/ll_module_core_me_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/module_core_me_wechat_btn"
                    app:maskColor="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="微信"
                    android:textColor="@color/_999999_7a7b7d"
                    android:textSize="11sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_module_core_me_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/module_core_me_friend_btn"
                    app:maskColor="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="朋友圈"
                    android:textColor="@color/_999999_7a7b7d"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_module_core_me_dingding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/module_core_me_dingding_btn"
                    app:maskColor="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="钉钉"
                    android:textColor="@color/_999999_7a7b7d"
                    android:textSize="11sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_module_core_me_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/module_core_me_qq_btn"
                    app:maskColor="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="QQ"
                    android:textColor="@color/_999999_7a7b7d"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_module_core_me_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/module_core_me_sina_btn"
                    app:maskColor="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="微博"
                    android:textColor="@color/_999999_7a7b7d"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_module_core_me_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/module_core_me_space_btn"
                    app:maskColor="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="QQ空间"
                    android:textColor="@color/_999999_7a7b7d"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/_d8d8d8_5c5c5c" />

    <Button
        android:id="@+id/btn_dialog_close"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/_ffffff_202124"
        android:text="@string/module_core_tip_cancel"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="14sp" />
</LinearLayout>
