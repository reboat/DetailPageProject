<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/module_detail_coner"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="@dimen/ts_14sp"
        tools:text="标题" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="16sp"
        tools:text="是否确认删除该评论" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="60dp"
        android:background="@color/_484848_7a7b7d"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choose1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/_484848_7a7b7d"
            android:textSize="15sp"
            tools:text="选择1" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/_484848_7a7b7d"
            />

        <TextView
            android:id="@+id/choose2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/_484848_7a7b7d"
            android:textSize="15sp"
            tools:text="选择2" />
    </LinearLayout>

</LinearLayout>