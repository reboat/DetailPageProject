<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/module_detail_coner"
              android:orientation="vertical">


    <TextView
        android:id="@+id/tv_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:text="@string/module_detail_is_delete_comment"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="60dp"
        android:background="@color/_484848_7a7b7d"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Button_Cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/module_core_tip_cancel"
            android:textColor="@color/_484848_7a7b7d"
            android:textSize="16sp" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/_484848_7a7b7d"
            />

        <TextView
            android:id="@+id/Button_OK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/module_detail_comment_delete"
            android:textColor="@color/_f44b50_8e3636"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>