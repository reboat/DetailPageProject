<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/module_detail_comment_more_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_f8f8f8_202124"
        android:paddingBottom="16dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:id="@+id/ll_module_core_more_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="99dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_module_core_more_collect"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:src="@drawable/module_detail_collect"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/module_detail_collect"
                android:textColor="@color/_666666"
                android:textSize="@dimen/ts_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_module_core_more_feed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="86dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_module_core_more_feed_back"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:src="@mipmap/module_detail_feed_back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/module_detail_feedback"
                android:textColor="@color/_666666"
                android:textSize="@dimen/ts_12sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/_dcdcdc" />

    <RelativeLayout
        android:id="@+id/ry_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36.5dp"
        android:paddingRight="37dp">

        <ImageView
            android:id="@+id/iv_font_small"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/rg_module_core_more_set_font_size"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/module_core_font_small"
            />

        <RadioGroup
            android:id="@+id/rg_module_core_more_set_font_size"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/iv_font_big"
            android:layout_toRightOf="@+id/iv_font_small"
            android:gravity="bottom"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_module_core_more_set_font_size_small"
                style="@style/set_font_size_style"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="7dp"
                android:drawableBottom="@drawable/module_core_font_size_small_selector"
                android:text="@string/module_detail_small"
                android:textColor="@color/_484848_7a7b7d"
                android:textSize="@dimen/ts_11sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:background="@color/_484848_7a7b7d" />

            <RadioButton
                android:id="@+id/rb_module_core_more_set_font_size_normal"
                style="@style/set_font_size_style"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:drawableBottom="@drawable/module_core_font_size_normal_selector"
                android:text="@string/module_detail_middle"
                android:textColor="@color/_484848_7a7b7d"
                android:textSize="@dimen/ts_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:background="@color/_484848_7a7b7d" />

            <RadioButton
                android:id="@+id/rb_module_core_more_set_font_size_big"
                style="@style/set_font_size_style"
                android:drawableBottom="@drawable/module_core_font_size_big_selector"
                android:text="@string/module_detail_big"
                android:textColor="@color/_484848_7a7b7d"
                android:textSize="@dimen/ts_18sp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/iv_font_big"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/rg_module_core_more_set_font_size"
            android:layout_alignParentRight="true"
            android:src="@mipmap/module_core_font_big"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gridlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ly_preview"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_module_core_more_set_font_size_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/module_core_font_size_preview"
            android:textColor="@color/_484848_7a7b7d"
            android:textSize="@dimen/ts_14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/_d8d8d8_5c5c5c" />

    <Button
        android:id="@+id/btn_dialog_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/_ffffff_202124"
        android:text="@string/module_core_tip_cancel"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="@dimen/ts_16sp" />

</LinearLayout>
