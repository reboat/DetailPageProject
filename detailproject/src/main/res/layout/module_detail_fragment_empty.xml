<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:id="@+id/ly_container"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="@color/_ffffff_191919"
                                              android:fitsSystemWindows="true"
                                              android:orientation="vertical"
    >

    <com.aliya.view.fitsys.FitWindowsFrameLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffffff_191919"
        android:fitsSystemWindows="true"
        android:minHeight="@dimen/toolbar_normal_height"
        android:visibility="gone"
        app:fitType="top">

        <ImageView
            android:id="@+id/iv_top_bar_back"
            android:layout_width="42dp"
            android:layout_height="@dimen/toolbar_normal_height"
            android:background="?attr/actionBarItemBackground"
            android:paddingRight="7dp"
            android:scaleType="center"
            android:src="@mipmap/module_biz_top_bar_back"
            app:iv_maskColor="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_top_bar_title"
            style="@style/ToolbarTitle"
            android:textColor="@color/_484848_7a7b7d"
            tools:text="自定义ToolBar" />

    </com.aliya.view.fitsys.FitWindowsFrameLayout>

    <TextView
        android:id="@+id/tv_empty_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_80000000"
        android:drawablePadding="10dp"
        android:gravity="center|left"
        android:lineSpacingExtra="3dp"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:textColor="@color/_ffffff_999999"
        android:text="@string/module_detail_revoke"
        android:textSize="@dimen/ts_14sp"
        tools:text="很抱歉,来晚一步,这篇已经不在了,别着急,你可以看看其他热门内容" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
    </android.support.v7.widget.RecyclerView>
</com.aliya.view.fitsys.FitWindowsLinearLayout>

