<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             xmlns:tools="http://schemas.android.com/tools"
             android:minHeight="52dp">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="2dp"-->
    <!--android:background="@color/bc_2a2a2a" />-->

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_map"
            android:layout_alignRight="@id/iv_map"
            android:layout_marginRight="-6dp"
            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/iv_map"
            android:textColor="?attr/tc_484848"
            android:textSize="@dimen/ts_11sp"
            tools:text="正在刷新中"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/iv_map"
            android:textColor="?attr/tc_484848"
            android:textSize="@dimen/ts_11sp"
            tools:text="最后更新：今天08:30"/>

    </RelativeLayout>

</FrameLayout>