<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="169dp"
        android:layout_height="91dp"
        android:scaleType="fitXY"
        tools:src="@mipmap/authority"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_image"
        android:layout_below="@+id/iv_image"
        android:background="@color/_fff0f0f0"
        android:ellipsize="end"
        android:fontFamily="@font/fzzcysk_zbjt"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/_222222"
        android:textSize="@dimen/ts_14sp"
        tools:text="张高丽夏宝龙车俊对温州倒要求全力搜救要求全力全" />

</RelativeLayout>