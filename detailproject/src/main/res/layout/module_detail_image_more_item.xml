<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <com.aliya.uimode.widget.MaskImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:scaleType="center"
        tools:src="@mipmap/authority"
        android:background="@color/_ffffff"
        app:ratio_w2h="169:91"

        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/iv_image"
        android:layout_below="@+id/iv_image"
        android:background="@color/_fff0f0f0"
        android:ellipsize="end"
        android:fontFamily="@font/fzzcysk_zbjt"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/_222222"
        android:textSize="@dimen/ts_14sp"
        tools:text="张高丽" />

</RelativeLayout>