<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingBottom="18dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@mipmap/default_avatar_icon"/>

    <TextView
        android:id="@+id/tv_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_avatar"
        android:drawableLeft="@drawable/sl_comment_thumb_up"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:text="1000"
        android:textColor="@color/sl_comment_thumb_up_tv"
        android:textSize="@dimen/ts_12sp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/tv_thumb_up"
        android:layout_toRightOf="@id/iv_avatar"
        android:gravity="top|left"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="你好"
        android:textSize="@dimen/ts_12sp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/tv_thumb_up"
        android:layout_toRightOf="@id/iv_avatar"
        android:gravity="left|bottom"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="2016-09-01 21:20"
        android:textSize="@dimen/ts_10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/iv_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:orientation="vertical"
        >

        <com.zjrb.coreprojectlibrary.ui.widget.ExpandableTextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:textColor="?attr/tc_3b424c"
            android:textSize="@dimen/ts_16sp"/>

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ts_12sp"/>

    </LinearLayout>

</RelativeLayout>