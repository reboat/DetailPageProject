<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="10dp">

    <com.aliya.view.ratio.RatioFrameLayout
        android:id="@+id/rf_img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio_w2h="360:178.5">

        <ImageView
            android:id="@+id/iv_activity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:visibility="gone"
            tools:src="@mipmap/default_avatar_icon"/>

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:src="@mipmap/module_core_me_sina_btn"/>
    </com.aliya.view.ratio.RatioFrameLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lineSpacingExtra="6dp"
        android:maxLines="2"
        android:textColor="?attr/tc_484848"
        android:textSize="@dimen/ts_14sp"
        tools:text="客户端5.0.0版本已发布，快来更新吧！客户端5.0.0版本,暖算耗时啊啥杀手包安徽省的尼桑打打打打的啊"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15.5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/me_qq_btn"
            android:gravity="center"
            android:textColor="?attr/tc_999999"
            android:textSize="@dimen/ts_11sp"
            tools:text="2016.10.24－2016.12.26"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/me_qq_btn"
            android:gravity="center"
            android:textColor="?attr/tc_999999"
            android:textSize="@dimen/ts_11sp"
            android:visibility="gone"
            tools:text="23"
            />
    </LinearLayout>

</LinearLayout>