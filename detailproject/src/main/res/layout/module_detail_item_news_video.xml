<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground"
              android:orientation="vertical"
              android:paddingTop="10dp">

    <com.aliya.view.ratio.RatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio_w2h="16:9">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv_staus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            />

    </com.aliya.view.ratio.RatioFrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="@dimen/ts_14sp"
        tools:text="国家主席习近平在伦敦白金汉宫出席英国女王伊王"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9dp">
        <!--状态标签-->
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/module_news_border_f44b50"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minHeight="18dp"
            android:minWidth="50dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/_f44b50_8e3636"
            android:textSize="@dimen/ts_11sp"
            tools:text="推荐"/>
        <!--频道名-->
        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/tv_tag"
            android:background="@drawable/module_news_border_999999_r10"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minHeight="18dp"
            android:minWidth="50dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/_999999_5c5c5c"
            android:textSize="@dimen/ts_11sp"
            tools:text="新闻眼"/>

        <!--分享-->
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="10dp"
            app:iv_maskColor="@color/_5c5c5c"
            />

        <TextView
            android:id="@+id/tv_prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toLeftOf="@+id/iv_share"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/_999999_5c5c5c"
            tools:text="1.4万点赞"/>

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_prise"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/_999999_5c5c5c"
            android:textSize="@dimen/ts_11sp"
            tools:text="1.4万万人观看"/>

    </RelativeLayout>
</LinearLayout>