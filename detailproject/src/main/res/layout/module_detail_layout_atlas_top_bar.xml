<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:fitsSystemWindows="true"
    app:fitType="top">

    <com.aliya.view.fitsys.FitWindowsRelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/toolbar_normal_height">

        <!--返回-->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="center"
            android:src="@mipmap/module_core_back_topbar" />

        <!--订阅-->
        <com.aliya.view.fitsys.FitWindowsRelativeLayout
            android:id="@+id/frl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/iv_top_download"
            android:layout_toRightOf="@+id/iv_back"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_top_subscribe_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:maskColor="@android:color/transparent"
                tools:src="@mipmap/module_biz_share_qq" />

            <TextView
                android:id="@+id/tv_top_bar_title_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/tv_top_bar_subscribe_text"
                android:layout_toRightOf="@+id/iv_top_subscribe_icon"
                android:ellipsize="end"
                android:fontFamily="@font/fzzcysk_zbjt"
                android:singleLine="true"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/ts_14sp"
                tools:text="金华日报在线金华日报在线" />


            <ImageView
                android:id="@+id/tv_top_bar_subscribe_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/module_biz_selector_atlas_topbar_subscribe" />

            <TextView
                android:id="@+id/rank_action_view"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rank_action_white_background"
                android:paddingLeft="14dp"
                android:paddingTop="4dp"
                android:paddingRight="14dp"
                android:paddingBottom="4dp"
                android:text="打榜"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

        </com.aliya.view.fitsys.FitWindowsRelativeLayout>


        <!--分享-->
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="center"
            android:src="@mipmap/module_biz_atlas_share"
            android:visibility="invisible" />

        <!--下载-->
        <ImageView
            android:id="@+id/iv_top_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/iv_share"
            android:scaleType="center"
            android:src="@mipmap/module_biz_atlas_download"
            android:visibility="invisible"
            app:maskColor="@android:color/transparent" />

    </com.aliya.view.fitsys.FitWindowsRelativeLayout>
</com.aliya.view.fitsys.FitWindowsFrameLayout>