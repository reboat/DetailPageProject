<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/top_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/_ffffff_202124">

    <!--宽高比为3:2-->
    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="13dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:ratio_w2h="3:2"
        tools:src="@mipmap/module_core_ic_load_zhe"
        />

    <com.aliya.view.fitsys.FitWindowsLinearLayout
        android:id="@+id/fit_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top_bg"
        android:layout_marginRight="32dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        app:fitType="top">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/_000000_7a7b7d"
            android:textSize="@dimen/ts_22sp"
            android:textStyle="bold"
            tools:text="浙商银行程度浙商银行程度浙商银行程度浙商银行程度" />
        <!--新闻来源全部显示-->
        <TextView
            android:id="@+id/tv_reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/_bfbfbf"
            android:textSize="@dimen/ts_12sp"
            tools:text="浙江新闻客户端 记者 周州 通讯员 包卫丽 储杰" />

    </com.aliya.view.fitsys.FitWindowsLinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit_top_layout"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="6dp"
        android:textColor="@color/_bfbfbf"
        android:textSize="@dimen/ts_12sp"
        tools:text="2017-05-16 14:24" />

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit_top_layout"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_time"
        android:background="?attr/actionBarItemBackground"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="6dp"
        android:textColor="@color/_f44b50_8e3636"
        android:textSize="@dimen/ts_12sp"
        tools:text="杭州频道" />


    <TextView
        android:id="@+id/tv_read_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit_top_layout"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_channel_name"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="6dp"
        android:textColor="@color/_bfbfbf"
        android:textSize="@dimen/ts_12sp"
        android:visibility="invisible"
        tools:text="6578阅读" />

    <!--直播稿-摘要-->
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_channel_name"
        android:layout_marginTop="21dp"
        android:lineSpacingExtra="30dp"
        android:textColor="@color/_535353"
        android:textSize="@dimen/ts_18sp"
        android:visibility="gone"
        tools:text="央视网消息：九曲黄河，奔涌东流，一路穿山劈岭，顺势而下，滋润着古老悠久的黄河文明。如今，这里经济繁荣，环境优美，各族人民手足相亲、守望相助，“塞上江南”焕发着如诗如画的绚丽风采。" />

</RelativeLayout>