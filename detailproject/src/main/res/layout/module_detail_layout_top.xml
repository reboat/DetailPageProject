<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/bc_202124">

    <!--宽高比为3:2-->
    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:ratio_w2h="3:2"
         />

    <com.aliya.view.fitsys.FitWindowsLinearLayout
        android:id="@+id/fit_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top_bg"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:fitType="top">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:focusable="true"
            android:lineSpacingMultiplier="1.1"
            android:textColor="?attr/tc_000000"
            android:textSize="@dimen/ts_22sp"
            android:textStyle="bold"
            tools:text="浙商银行程度" />
        <!--新闻来源全部显示-->
        <TextView
            android:id="@+id/tv_reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?attr/tc_999999"
            android:textSize="@dimen/ts_14sp"
            tools:text="浙江新闻客户端 记者 周州 通讯员 包卫丽 储杰" />

    </com.aliya.view.fitsys.FitWindowsLinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit_top_layout"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="?attr/tc_999999"
        android:textSize="@dimen/ts_14sp"
        tools:text="2017-05-16 14:24" />

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit_top_layout"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_time"
        android:background="?attr/actionBarItemBackground"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="?attr/tc_f44b50"
        android:textSize="@dimen/ts_14sp"
        tools:text="杭州频道" />

</RelativeLayout>