<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/activity_atlas_detail"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <com.zjrb.coreprojectlibrary.ui.widget.photoview.HackyViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <!--顶部-->
    <LinearLayout
        android:id="@+id/container_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <com.zjrb.coreprojectlibrary.ui.widget.fitsys.FitSysWinFrameLayout
            android:id="@+id/fit_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:fitType="top"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:id="@+id/tv_atlas_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/ts_18sp"
                tools:text="杭州动动帮杭州动动帮杭州动动帮杭州动动帮杭州动动帮杭州动动帮杭州动动帮杭州动动帮杭州动动帮"/>

            <TextView
                android:id="@+id/tv_atlas_top_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22.5dp"
                android:paddingBottom="3dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/ts_12sp"
                tools:text="订阅"/>
        </RelativeLayout>

    </LinearLayout>

    <!--底部-->
    <LinearLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.zjrb.coreprojectlibrary.ui.widget.AtlasIndexView
            android:id="@+id/index_view"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_tag_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="110dp"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="@string/tip_original"
                android:textColor="?attr/color_fdc247"
                android:textSize="@dimen/ts_10sp"
                android:visibility="gone"/>
        </com.zjrb.coreprojectlibrary.ui.widget.AtlasIndexView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/ts_16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="4"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:textSize="@dimen/ts_14sp"/>

        <!--底部floorBar-->
        <RelativeLayout
            android:id="@+id/floor_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/module_detail_floor_bar_height"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/module_detail_floor_bar_height"
                android:layout_height="@dimen/module_detail_floor_bar_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15.5dp"
                android:background="?android:attr/actionBarItemBackground"
                android:scaleType="center"
                android:src="@mipmap/nav_bar_back_w_btn"
                />

            <ImageView
                android:id="@+id/menu_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:src="@mipmap/ic_more_atlas"
                />

            <ImageView
                android:id="@+id/menu_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/menu_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/sl_atlas_detail_collected"
                />

            <ImageView
                android:id="@+id/menu_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/menu_collected"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:src="@mipmap/ic_atlas_detail_comment"
                />

            <TextView
                android:id="@+id/tv_comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/menu_comment"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="-3dp"
                android:layout_toRightOf="@id/menu_comment"
                android:textColor="?attr/color_fdc247"
                android:textSize="@dimen/ts_11sp"/>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/menu_comment"
                android:background="@drawable/bg_atlas_say_words">

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="@string/say_two_words"
                    android:textSize="@dimen/ts_14sp"/>
            </FrameLayout>
        </RelativeLayout>

        <com.zjrb.coreprojectlibrary.ui.widget.fitsys.FitSysWinFrameLayout
            android:id="@+id/fit_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:fitType="bottom"/>
    </LinearLayout>
</FrameLayout>
