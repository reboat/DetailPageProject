<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginLeft="15.8dp"
                android:layout_marginRight="15.5dp"
    >

    <ImageView
        android:id="@+id/iv_share_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6.5dp"
        android:scaleType="fitXY"
        android:src="?attr/module_detail_share_friend"
        app:iv_maskColor="@android:color/transparent"
        />

    <TextView
        android:id="@+id/tv_share_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_share_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="?attr/tc_999999"
        android:textSize="11sp"
        tools:text="QQ空间"/>
</RelativeLayout>
