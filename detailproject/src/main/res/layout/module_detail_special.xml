<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/ly_container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/_f0f0f0_191919"
                                             android:fitsSystemWindows="true"
                                             app:fitType="bottom">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_ffffff"
        android:descendantFocusability="blocksDescendants" />

    <LinearLayout
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_ffffff_191919"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/group_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_ffffff_191919"
            android:visibility="gone" />

    </LinearLayout>

    <!--顶部tools bar-->
    <com.aliya.view.fitsys.FitWindowsFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:minHeight="@dimen/toolbar_normal_height"
        >

        <ImageView
            android:id="@+id/iv_top_bar_back"
            android:layout_width="42dp"
            android:layout_height="@dimen/toolbar_normal_height"
            android:background="?attr/actionBarItemBackground"
            android:paddingRight="7dp"
            android:scaleType="center"
            android:src="@mipmap/module_biz_write_back"
            />

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_normal_height"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingRight="2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_top_collect"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/module_biz_ic_top_bar_collect"
                />

            <ImageView
                android:id="@+id/iv_top_share"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/module_biz_atlas_share"
                />

        </LinearLayout>

    </com.aliya.view.fitsys.FitWindowsFrameLayout>

    <FrameLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</com.aliya.view.fitsys.FitWindowsFrameLayout>