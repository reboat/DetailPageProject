<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/ly_container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/_f0f0f0_191919"
                                             android:fitsSystemWindows="true"
                                             app:fitType="bottom">

    <!--整个专题稿列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_ffffff"
        android:descendantFocusability="blocksDescendants" />

    <!--吸顶tab栏-->
    <com.aliya.view.fitsys.FitWindowsLinearLayout
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_read_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/_ffffff_191919"
            android:drawableLeft="@drawable/module_detail_indicator_color_fdc247"
            android:drawablePadding="6dp"
            android:fontFamily="@font/fzzcysk_zbjt"
            android:gravity="center_vertical|left"
            android:paddingBottom="9dp"
            android:paddingLeft="15dp"
            android:text="聚合阅读"
            android:textColor="@color/_222222"
            android:textSize="14sp"
            android:visibility="visible"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_ffffff_191919"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/group_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_ffffff_191919"
            android:paddingRight="15dp"
            android:visibility="gone" />

    </com.aliya.view.fitsys.FitWindowsLinearLayout>

    <!--顶部tools bar 颜色渐变-->
    <com.aliya.view.fitsys.FitWindowsFrameLayout
        android:id="@+id/fy_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:minHeight="@dimen/toolbar_normal_height"
        >

        <ImageView
            android:id="@+id/iv_top_bar_back"
            android:layout_width="42dp"
            android:layout_height="@dimen/toolbar_normal_height"
            android:background="?attr/actionBarItemBackground"
            android:paddingRight="7dp"
            android:scaleType="center"
            android:src="@mipmap/module_biz_write_back"
            />

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_normal_height"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingRight="2dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_top_collect"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/module_biz_ic_special_collect"
                />

            <ImageView
                android:id="@+id/iv_top_share"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/module_biz_atlas_share"
                />

        </LinearLayout>

    </com.aliya.view.fitsys.FitWindowsFrameLayout>

    <FrameLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</com.aliya.view.fitsys.FitWindowsFrameLayout>