<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:fitType="bottom">

    <!--顶部tools bar 颜色渐变-->
    <com.aliya.view.fitsys.FitWindowsFrameLayout
        android:id="@+id/fy_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffffff"
        android:fitsSystemWindows="true"
        app:fitType="top">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/actionBarItemBackground"
            android:scaleType="center"
            android:src="@mipmap/module_biz_top_bar_back" />

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">
            
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_follow"
                android:fontFamily="@font/fzbiaoysk_zbjt"
                android:textColor="@color/_d12324"
                android:textSize="@dimen/ts_12sp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:minWidth="50dp"
                android:background="@drawable/module_detail_shape_border_d12324_r999"
                android:layout_marginRight="30dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                tools:text="追踪"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_top_collect"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:scaleType="center"
                android:src="@drawable/module_biz_ic_special_collect_anim" />

            <ImageView
                android:id="@+id/iv_top_share"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@mipmap/module_biz_topbar_share" />

        </LinearLayout>

    </com.aliya.view.fitsys.FitWindowsFrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--整个专题稿列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/_ffffff"
            android:descendantFocusability="blocksDescendants" />

        <!--吸顶tab栏-->
        <LinearLayout
            android:id="@+id/overlay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_read_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/_ffffff_191919"
                android:drawableLeft="@drawable/module_detail_indicator_color_fdc247"
                android:drawablePadding="6dp"
                android:fontFamily="@font/fzzcysk_zbjt"
                android:gravity="center_vertical|left"
                android:paddingBottom="9dp"
                android:paddingLeft="15dp"
                android:text="@string/module_detail_aggregate_read"
                android:textColor="@color/_222222"
                android:textSize="14sp"
                android:visibility="visible" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_ffffff_191919"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="25dp"
                android:paddingTop="5dp"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/group_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_ffffff_191919"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</com.aliya.view.fitsys.FitWindowsLinearLayout>