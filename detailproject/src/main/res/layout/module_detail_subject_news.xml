<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ly_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_related"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/module_detail_border_f5f5f5"
        android:drawableLeft="@drawable/module_detail_indicator_color_fdc247"
        android:drawablePadding="12dp"
        android:gravity="center_vertical|left"
        android:letterSpacing="0.25"
        android:lineSpacingMultiplier="1.1"
        android:paddingBottom="9.5dp"
        android:paddingTop="9dp"
        android:textColor="@color/_484848_7a7b7d"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="相关专题" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="vertical" />
</LinearLayout>