<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_f5f5f5_191919"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_related"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/module_detail_border_f5f5f5"
        android:drawableLeft="@drawable/module_detail_indicator_color_fdc247"
        android:drawablePadding="6dp"
        android:gravity="center_vertical|left"
        android:letterSpacing="0.25"
        android:lineSpacingMultiplier="1.1"
        android:paddingBottom="9.5dp"
        android:paddingTop="9dp"
        android:textColor="@color/_222222"
        android:textSize="14sp"
        android:fontFamily="@font/fzzcysk_zbjt"
        tools:text="热门评论" />

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:drawableRight="@mipmap/module_detail_offical_more"
        android:textColor="@color/_484848_7a7b7d"
        android:text="全部"
        android:visibility="gone" />

</RelativeLayout>
