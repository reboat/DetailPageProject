<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/bc_202124"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.aliya.view.fitsys.FitWindowsRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:scrollbars="vertical"
            app:fitType="bottom" />

        <include
            android:id="@+id/ly_bottom_comment"
            layout="@layout/module_detail_bottom_comment" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/ry_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/ic_top_bar_back_dark"
            />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:src="@mipmap/ic_detail_menu_share" />

        <View
            android:id="@+id/v_toolbar_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="16dp"
            android:background="?attr/dc_dddddd"
            android:visibility="invisible"
            />
    </FrameLayout>

</RelativeLayout>