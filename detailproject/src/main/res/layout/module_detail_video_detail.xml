<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/_ffffff_202124"
    >

    <com.aliya.view.ratio.RatioFrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:ratio_w2h="16:9">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <!--WLJ 播放-->
        <LinearLayout
            android:id="@+id/iv_type_video"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_margin="11.5dp"
            android:background="@drawable/vr_module_video_bg_oval_99ffffff_80000000"
            android:foreground="?attr/actionBarItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vr_module_ic_play_start"
                app:iv_maskColor="@color/_cccbcb" />

            <!--直播状态-->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:letterSpacing="0.03"
                android:textColor="@color/_f44b50_7a7b7d"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="00:00" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/module_detail_video_live_durat"
            android:paddingBottom="4dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="4dp"
            android:textColor="@color/_ffffff"
            android:textSize="11sp"
            tools:text="00:00" />

        <!--网络提醒-->
        <include
            android:id="@+id/ll_net_hint"
            layout="@layout/vr_layout_start_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone">
        </include>

    </com.aliya.view.ratio.RatioFrameLayout>

    <com.zjrb.daily.news.ui.widget.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/video_container"
        android:background="@color/_ffffff"
        app:tl_indicator_color="@color/_ffcd3f3f"
        app:tl_indicator_height="4dp"
        app:tl_indicator_width="18dp"
        app:tl_textSelectColor="@color/_222222"
        app:tl_textUnselectColor="@color/_666666"
        app:tl_textsize="@dimen/ts_14sp"
        app:tl_tab_space_equal="true"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout" />

    <include
        android:id="@+id/ly_bottom_comment"
        layout="@layout/module_detail_bottom_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>