<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ry_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/_ffffff_202124"
    >

    <com.aliya.view.ratio.RatioFrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:ratio_w2h="16:9">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zjnews_video_listpage_play_icon"
            app:iv_maskColor="@color/_cccbcb" />



    </com.aliya.view.ratio.RatioFrameLayout>

    <com.zjrb.daily.news.ui.widget.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/video_container"
        android:background="@color/_ffffff"
        android:elevation="5dp"
        app:tl_indicator_color="@color/_ffcd3f3f"
        app:tl_indicator_height="4dp"
        app:tl_indicator_width="18dp"
        app:tl_textSelectColor="@color/_222222"
        app:tl_textUnselectColor="@color/_666666"
        app:tl_textsize="@dimen/ts_14sp"
        app:tl_tab_space_equal="true"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout" />

    <include
        android:id="@+id/ly_bottom_comment"
        layout="@layout/module_detail_bottom_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>