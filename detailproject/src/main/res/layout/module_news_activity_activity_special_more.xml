<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f5f5f5"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    android:orientation="vertical"
    tools:context=".ui.special.SpecialMoreActivity"
    app:fitType="bottom">
    <com.aliya.view.ratio.RatioRelativeLayout
        app:ratio_w2h="360:123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/_d12324"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_top_bar_back_white"
                android:layout_width="19dp"
                android:layout_height="19dp" />
            <ImageView
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/iv_share"
                android:src="@drawable/module_core_ic_top_bar_collect"
                android:layout_width="19dp"
                android:layout_height="19dp" />
            <ImageView
                android:id="@+id/iv_share"
                android:layout_alignParentRight="true"
                android:src="@mipmap/module_core_topbar_share"
                android:layout_width="19dp"
                android:layout_height="19dp" />
        </RelativeLayout>
    </com.aliya.view.ratio.RatioRelativeLayout>
    <TextView
        android:fontFamily="@font/fzbiaoysk_zbjt"
        android:background="@color/_ffffff"
        android:text="@string/data_host"
        android:padding="14dp"
        android:textSize="19sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/_000000"
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zjrb.daily.news.ui.widget.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingRight="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="?attr/selectableItemBackgroundBorderless"
            app:tl_indicator_width="16dp"
            app:tl_tab_padding="8dp"
            app:tl_textUnselectColor="#808080"
            app:tl_textSelectColor="#222222"
            app:tl_indicator_color="@color/_d12324"
            app:tl_textsize="@dimen/ts_15sp"
            />

        <com.zjrb.core.ui.widget.CompatViewPager
            android:layout_marginTop="10dp"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    

</com.aliya.view.fitsys.FitWindowsLinearLayout>