<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f5f5f5"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    android:orientation="vertical"
    app:fitType="bottom">
    <!--顶部tools bar-->
    <com.aliya.view.ratio.RatioFrameLayout
        android:id="@+id/fl_top"
        app:ratio_w2h="360:123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.aliya.view.ratio.RatioFrameLayout>
    <com.aliya.view.ratio.RatioRelativeLayout
        android:fitsSystemWindows="true"
        android:minHeight="@dimen/toolbar_normal_height"
        app:ratio_w2h="360:123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_top_bar_back"
            android:layout_width="42dp"
            android:layout_height="@dimen/toolbar_normal_height"
            android:background="?attr/actionBarItemBackground"
            android:paddingRight="7dp"
            android:scaleType="center"
            android:src="@mipmap/module_biz_write_back"
            />

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_normal_height"
           android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:paddingRight="2dp">

            <ImageView
                android:id="@+id/iv_top_collect"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/module_biz_ic_top_bar_collect"
                />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/module_biz_atlas_share"
                />

        </LinearLayout>

    </com.aliya.view.ratio.RatioRelativeLayout>
    <TextView
        android:elevation="2dp"
        android:layout_below="@id/fl_top"
        android:id="@+id/tv_title"
        android:fontFamily="@font/fzbiaoysk_zbjt"
        android:background="@color/_ffffff"
        tools:text="@string/data_host"
        android:padding="14dp"
        android:textSize="19sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/_000000"
        android:layout_width="match_parent"
        android:layout_height="85dp" />
    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_below="@id/tv_title"
        android:background="@color/_ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zjrb.daily.news.ui.widget.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingRight="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="?attr/selectableItemBackgroundBorderless"
            app:tl_indicator_width="16dp"
            app:tl_tab_padding="8dp"
            app:tl_textUnselectColor="#808080"
            app:tl_textSelectColor="#222222"
            app:tl_indicator_color="@color/_d12324"
            app:tl_textsize="@dimen/ts_15sp"
            />
        <View
            android:background="#e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <com.zjrb.core.ui.widget.CompatViewPager
            android:layout_marginTop="10dp"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    

</com.aliya.view.fitsys.FitWindowsRelativeLayout>