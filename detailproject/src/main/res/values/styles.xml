<resources>

    <style name="BottomDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/BottomToTopAnim</item>
    </style>

    <style name="BottomToTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/module_detail_bottomview_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/module_detail_bottomview_anim_exit</item>
    </style>

</resources>
